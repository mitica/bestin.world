---
import type { InsightInfo, TopicInfo } from "../content/common/types";

const { item, topics } = Astro.props as {
  item: InsightInfo;
  topics: TopicInfo[];
};
---

<h4>
  {item.emoji}
  {item.title}
</h4>
<p class="text-secondary">{item.description}</p>
<p class="topics">
  {topics.map((topic) => <a href={`/${topic.id}`}>{topic.name}</a>)}
</p>

<style>
  .topics {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .topics a {
    display: inline-block;
  }
</style>
